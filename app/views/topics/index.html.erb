<div class="topic-list">
  <div class="topic-list-header top-border-radius">
    <h2>Current Topic List</h2>
  </div>

  <div class="topic-list-body">
    <table class="topics-table">
      <% @topics.each do |topic| %>
        <tr class="topic-row" id="<%= "topic-#{topic.id}" %>">
          <td>
            <%= topic.title.titleize %>
            <span class="created-date"><%= formatted_date(topic.created_at) %></span>
          </td>
          <td class="vote-count"><%= "#{topic.count} votes" %></td>
          <td class="btn-col">
            <span id="<%= "topic-#{topic.id}" %>" class="upvote btn btn-small border-radius"><%= "upvote" %></span>
          </td>
          <td class="btn-col">
            <span id="<%= "topic-#{topic.id}" %>" class="downvote btn btn-small border-radius"><%= "downvote" %></span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="topic-list-footer bottom-border-radius">
    <%= link_to "Create new topic", '#', class: "btn btn-small border-radius", id: "show-new-topic" %>
    <div id="new-topic-form">
      <%= form_tag topics_path do %>
        <div class="field inline">
          <%= text_field_tag :title, nil, placeholder: "Topic description", class: "topic-form-field" %>
        </div>

        <div class="actions inline">
          <%= submit_tag "Create Topic", class: "btn btn-small border-radius new-topic-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>