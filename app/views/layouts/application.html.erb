<!DOCTYPE html>
<html>
  <head>
    <title>Breakout Machine</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <div class="container">
      <%= render 'shared/login' %>
      <%= render 'shared/signup' %>
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
