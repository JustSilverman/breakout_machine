<div id="signup-form" class="small-form bottom-border-radius">
  <h4>Signup below</h4>
  <%= form_for User.new, :remote => true do |f| %>
    <div class="field">
      <%= f.text_field :name, placeholder: "name", class: "small-form-field" %>
    </div>

    <div class="field">
      <%= f.text_field :email, placeholder: "email", class: "small-form-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "password", class: "small-form-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "password", class: "small-form-field" %>
    </div>

    <div class="field">
      <%= f.select :cohort_id, Cohort.all.collect { |c| [c.name, c.id] },
                            {:prompt => "Cohort", class: "small-form-field"} %>
    </div>

    <div class="actions">
      <div>
        <%= f.submit "Sign up", class: "btn-small-form border-radius" %>
      </div>
    </div>
  <% end %>
</div>